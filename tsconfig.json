{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": true,
		"jsx": "react",
		"outDir": "./dist",
		"sourceMap": true,
		"sourceRoot": "./src",
		"emitDecoratorMetadata": true,
    "experimentalDecorators": true,
		"declaration": true,
		"declarationDir": "./dist/typings"
	},
	"exclude": [
		"node_modules",
		".vscode",
		".git"
	]
}
